@model IEnumerable<Dynamics_365_WebApp.Models.Contact>
@using Dynamics_365_WebApp.Models


@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <div class="col-md-8">
        <p>
            <br />
            This is a demo application that connects to a cloud instance of Dynamics 365 and
            perfoirms CRUD operations on data in the Contact entity.
         </p>

        <p>
            <br />
            Click the button below for more information
            on the Dynamics 365 Contact entity
        </p>
        <p>
            <a class="btn btn-default" href="https://docs.microsoft.com/en-us/dynamics365/customerengagement/on-premises/developer/entities/contact" target="_blank">
                Dynamics Contact Entity Reference &raquo;
            </a>
        </p>
    </div>
</div>

@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    <p>
        <br />
    </p>

    <b> Search Option:</b> @Html.RadioButton("option", "Last Name", MyViewData.RadioButtonSelected == "Last Name" ? true : false) <text>Last Name</text>
    @Html.RadioButton("option", "First Name", MyViewData.RadioButtonSelected == "First Name" ? true : false) <text> First Name </text>

    @Html.TextBox("search")
    <input type="submit" name="submit" value="Search" />

    <p>
        <br />
    </p>
}

<p>
    @Html.ActionLink("Create New Contact", "Create", new { search = MyViewData.Search, option = MyViewData.RadioButtonSelected, currentPageNumber = MyViewData.PageNumber })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BusinessPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChosenReference)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChosenReference)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditContact", new { id = item.ContactId, search = MyViewData.Search, option = MyViewData.RadioButtonSelected, currentPageNumber = MyViewData.PageNumber }) |
                @Html.ActionLink("Delete", "DeleteContact", new { id = item.ContactId, search = MyViewData.Search, option = MyViewData.RadioButtonSelected, currentPageNumber = MyViewData.PageNumber }, new { onclick = "return confirm('Are sure wants to delete this record?');" })
            </td>
        </tr>
    }

</table>

@{
    var prevDisabled = (bool)!MyViewData.HasPreviousPage ? "disabled" : "";
    var nextDisabled = (bool)!MyViewData.HasNextPage ? "disabled" : "";
}

<a href="@Url.Action("Index", new { search = MyViewData.Search, option = MyViewData.RadioButtonSelected, currentPageNumber = MyViewData.PageNumber - 2})" class="btn btn-default @prevDisabled" role="button">Previous</a>
<a href="@Url.Action("Index", new { search = MyViewData.Search, option = MyViewData.RadioButtonSelected, currentPageNumber = MyViewData.PageNumber })" class="btn btn-default @nextDisabled" role="button">Next</a>
